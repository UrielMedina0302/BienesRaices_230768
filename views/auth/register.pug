extends ../layout/index
block contenido  
    div
    h1.text-center.text-4xl.my-10.font-extrabold.text-dark-cyan Bienes 
        span.font-normal.text-white Raices
    h2.text-center.text-tx2= page

    if errors 
                div(class="max-w-md mx-auto my-10")
                    each error in errors 
                        p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
           
    .mt-8.mx-auto.max-w-md 
        .bg-dark-cyan-100.py-8.px-4.shadow
             form(method="POST" action="/auth/createNewUser").space-y-5
                div 
                     label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold Tu nombre 
                     input#nombre.w-full.px-3.py-2.border-gray-300.rounded-md.placeholder-gray-300(type = "text"  placeholder="Ingresa tu nombre con apellidos" name="nombre_usuario")
                div 
                    label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold Correo Electronico  
                    input#email.w-full.px-3.py-2.border-gray-300.rounded-md.placeholder-gray-300(type = "email"  placeholder="ej: user@github.com" name="correo_usuario")
                div 
                    label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold Contraseña  
                    input#password.w-full.px-3.py-2.border-gray-300.rounded-md.placeholder-gray-300(type = "password"  placeholder="Ingresa una contraseña con al menos 8 digitos " name="contraseña_usuario")
                div 
                    label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold Confirmación contraseña  
                    input#repeatPass.w-full.px-3.py-2.border-gray-300.rounded-md.placeholder-gray-300(type = "password" placeholder="Confirma tu contraseña" name="repite_contraseña")
                div.flex.items-center.justify-between 
                    a.text-gray-500.text-xs(href="/auth/login" class="hover:underline hover:decoration-2 hover:decoration-spring-green") ¿Ya tienes cuenta? Inicia Sesión 
                    a.text-gray-500.text-xs(href="/auth/passwordRecovery" class="hover:underline hover:decoration-2 hover:decoration-spring-green") Olvide mi contraseña 

                input(class="w-full bg-spring-green hover:bg-dark-cyan-200 text-white font-bold py-3 cursor-pointer" type="submit" value="crear cuenta")